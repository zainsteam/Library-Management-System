<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.virgo.lmsapp.home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:id="@+id/imageView"
        android:background="@drawable/bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="WELCOME TO LIBRARY MANAGEMENT APP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/tv2"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:text="Log-In"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:onClick="onClick"
        android:id="@+id/reg"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_below="@+id/a_book"
        android:layout_alignLeft="@+id/a_book"
        android:layout_alignStart="@+id/a_book" />

    <Button
        android:text="Sig-up"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/v_mem"
        style="@android:style/Widget.Holo.Button"
        android:onClick="onClick"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_below="@+id/d_book"
        android:layout_alignLeft="@+id/d_book"
        android:layout_alignStart="@+id/d_book" />

    <Button
        android:text="Books"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="13dp"
        android:id="@+id/a_book"
        android:onClick="onClick"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:layout_below="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Request"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/d_book"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/a_book"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/a_book" />


</RelativeLayout>
